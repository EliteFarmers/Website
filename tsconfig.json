{
	"extends": "./.svelte-kit/tsconfig.json",
	"compilerOptions": {
		"allowJs": true,
		"checkJs": false,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
		"paths": {
			"$comp/*": ["src/components/*"],
			"$stores/*": ["src/stores/*"],
			"$lib/*": ["src/lib/*"],
			"$lib": ["src/lib"],
			"$db/*": ["src/database/*"]
		}
	}
}
