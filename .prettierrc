{
	"useTabs": true,
	"tabWidth": 4,
	"printWidth": 120,
	"singleQuote": true,
	"trailingComma": "es5",
	"semi": true,
	"bracketSpacing": true,
	"arrowParens": "always",
	"endOfLine": "lf",
	"tailwindAttributes": ["btnClass", "triggerClass", "popoverClass", "itemsClass", "iconClass", "parentClass"],
	"tailwindFunctions": ["clsx", "cn"],
	"plugins": ["prettier-plugin-svelte", "prettier-plugin-tailwindcss"],
	"overrides": [
		{
			"files": "*.svelte",
			"options": {
				"parser": "svelte"
			}
		}
	]
}
